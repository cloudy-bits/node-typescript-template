		"@types/node": "^22.10.7",
		"eslint": "^9.18.0",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"nunjucks": "^3.2.4",
		"prettier": "^3.4.2",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.19.1"
	}
